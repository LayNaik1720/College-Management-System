@{
    ViewData["Title"] = "Charts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Visual Attendance Data</h2>

<div class="row">
    <div class="col-md-6">
        <h5>Department-wise Attendance</h5>
        <canvas id="deptChart"></canvas>
    </div>
    <div class="col-md-6">
        <h5>Overall Monthly Trend</h5>
        <canvas id="monthChart"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        new Chart(document.getElementById('deptChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.Departments)),
                datasets: [{
                    label: 'Avg Attendance %',
                    data: @Html.Raw(Json.Serialize(ViewBag.AttendanceValues)),
                    backgroundColor: 'rgba(255,99,132,0.7)'
                }]
            }
        });

        new Chart(document.getElementById('monthChart'), {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.Months)),
                datasets: [{
                    label: 'Overall %',
                    data: @Html.Raw(Json.Serialize(ViewBag.MonthlyAvg)),
                    borderColor: 'rgba(153,102,255,1)',
                    fill: false
                }]
            }
        });
    </script>
}
