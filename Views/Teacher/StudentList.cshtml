@model IEnumerable<CollegeManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Student List";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>👨‍🎓 Student List</h2>
    <hr />

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Roll No</th>
                <th>Name</th>
                <th>Department</th>
                <th>Attendance %</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var student in Model)
        {
            string color = student.AttendancePercent < 75 ? "text-danger fw-bold" : "text-success";
            <tr>
                <td>@student.RollNumber</td>
                <td>@student.Name</td>
                <td>@student.Department</td>
                <td class="@color">@student.AttendancePercent%</td>
            </tr>
        }
        </tbody>
    </table>
</div>
